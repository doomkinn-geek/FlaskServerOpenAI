@page
@model IndexModel
@{
    ViewData["Title"] = "Prompt Generator";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" onsubmit="return validateForm()">
                <div class="form-group">
                    <label for="promptInput">Enter a prompt:</label>
                    <input type="text" class="form-control" id="promptInput" name="prompt" required>
                </div>
                <button type="submit" class="btn btn-primary">Generate</button>
            </form>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.Response))
            {
                <div class="alert alert-success" role="alert">
                    <strong>Generated response:</strong> @Model.Response
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script>
        function validateForm() {
            var promptInput = document.getElementById("promptInput");
            if (promptInput.value.trim() === "") {
                alert("Please enter a prompt.");
                promptInput.focus();
                return false;
            }
            return true;
        }
    </script>
}
